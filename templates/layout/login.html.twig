{% include 'layout/menu.html.twig' %}

<div class="container container-login">
    <h3>Connectez-vous avec votre email</h3>

    <form role="form" action="{{ path('login') }}" method="post" id="login-connexion" autocomplete="off">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">@</span>
            </div>
            <input type="text" class="form-control" placeholder="Email" name="_username" aria-describedby="basic-addon1" value="{{ last_username }}">
